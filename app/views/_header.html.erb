<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <title>LSSSP</title>
        <%= javascript_include_tag 'application','jquery-1.5.2.min','rails','facebox' %>
        <%= stylesheet_link_tag 'admin_screen','facebox' %>
        <%= csrf_meta_tag %>
		<script type="text/javascript">
            jQuery(document).ready(function($){
                $('a[rel*=facebox]').facebox()
            })
        </script>
    </head>
    <body id="store">
        <div id="header">
            <div id="welcome">
                Welcome: <span id="welcome_username"><%=current_user.first_name %></span>
                <span>!&nbsp;&nbsp;</span>
                | <%=link_to 'Profile',:controller=>'/users',:action=>'show',:id=>current_user.id %>
                | <%=link_to 'Logout',logout_path %>
            </div>
            <h3><%=link_to image_tag("adminlogo.png",:border => 0),root_url %>
            </h3>
        </div>
        <div id="tabs">
            <ul>
                <%= admin_tabs %>
            </ul>
        </div>
