<div class="form-container">
    <%= form_tag :action => 'create' %>
    <div>
        <label>
            User Name:
        </label>
        <%= @user_name %>
        <%= hidden_field_tag  'user_id', @user_id %>
    </div>
    <hr/>
    <div>
        <label>
            Present Assigned Examinations:
        </label>
        <%if @userexam.count == 0 %>
        NO Examination is Assigned Yet.<%else %>
        <% @userexam.each do |a| %>
        <%= a.examination.examname %>
        <%end %>
        <%end %>
    </div>
    <hr>
    <div>
        <label>
            Avialable Examinations:
        </label>
        <% @examinations.each_with_index do |c, index| %>
	        <%= check_box_tag "exam_#{c.id}", c.id %><%= c.examname %>
        <% end %>
    </div>
    <hr>
    <div class="buttonrow">
        <%= submit_tag "Create" %>
    </div>
    <%= form_tag %>
</div>
