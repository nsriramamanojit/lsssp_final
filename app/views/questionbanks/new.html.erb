<h1>Question Bank</h1>
<%= render 'form' %>
<h1>Questions</h1>
<div id="questionList">
	<table id="box-table-a">
		<tr>
			<th scope="col"> SNo</th>
			<th scope="col"> Module</th>
			<th scope="col"> Question</th>
			<th scope="col"> Actions</th>
		</tr>
		<% i = 1 %>
		<% @questionbanks.each do |questionbank| %>
		<tr>
			<td> <%= i %></td>
			<td> <%= questionbank.subject.name %></td>
			<td> <%= questionbank.question_file_name %>
			<%= truncate(questionbank.question_text,:length => 50, :separator => '..') %></td>
			<td> <%= link_to 'View', {:action => 'show', :id => questionbank.id},:rel=>"facebox" %>| <%= link_to 'Edit', {:action => 'edit', :id => questionbank.id} %>| <%= link_to 'Delete', {:action => 'destroy', :id => questionbank.id} %></td>
		</tr>
		<% i = i +1 %>
		<% end %>
	</table>
</div>
<div class="flickr_pagination">
	<%= will_paginate @questionbanks, :container => false %>
	<div class='page_info'>
		<%= page_entries_info @questionbanks, :entry_name => 'Questions' %>
	</div>
</div>