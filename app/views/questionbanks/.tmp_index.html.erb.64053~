    <tr>
        <th scope="col">
            Module
        </th>
        <th scope="col">
            Actions
        </th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
        <td>
            <%= subject.name %>
        </td>
        <td>
            <%= link_to 'Create Question Bank', :controller => "questionbanks", :action=>"new", :module_id=>subject.id %>
