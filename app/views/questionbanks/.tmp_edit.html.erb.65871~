<h1>Editing Question Bank</h1>
<style>
    #graphical {
        display: none;
    }
    }
</style>
<script>
    $(function(){
        $('.question_type').click(function(){
            if ($(this).attr("id") == "1") {
                $('#textual').show();
                $("#graphical").hide();
                
            }
            else {
                if ($(this).attr("id") == "2") {
                    $('#textual').hide();
                    $("#graphical").show();
                    
                }
                
            }
        });
    });
</script>
<div class="form-container">
