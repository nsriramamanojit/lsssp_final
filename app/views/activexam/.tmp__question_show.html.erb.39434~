<script type="text/javascript">
    function checkSelected(id){
        qid = $("#question_id").val();
        sid = $("#subject_id").val();
        tid = $("#disp").val();
        eid = $("#exam_id").val();
        
        $.ajax({
            url: "/activexam/answer?question_id=" + qid + "&answer_id=" + id + "&subject_id=" + sid + "&time=" + tid + "&exam_id=" + eid,
            context: document.body,
            success: function(){
                //$(this).addClass("done");
            }
        });
    };
</script>
