<script type="text/javascript">
jQuery(function ($) {
	$('#confirm-dialog_end input.confirm, #confirm-dialog_end a.confirm').click(function (e) {
		e.preventDefault();
		tid = $("#disp").val();
		// example of calling the confirm function
		// you must use a callback function to perform the "yes" action
		confirm("You are about to end your Test. If you really want to quit, please click Yes. Otherwise, please click No", function () {
			window.location.href = "/activexam/test_complete?exam_id=<%= params[:exam_id]%>"
		});
	});
});
jQuery(function ($) {
	$('#confirm-dialog input.confirm, #confirm-dialog a.confirm').click(function (e) {
		e.preventDefault();
		tid = $("#disp").val();
		// example of calling the confirm function
		// you must use a callback function to perform the "yes" action
		confirm("You are about to Save your Test. If you really want to Save and Take this Test again, please click Yes. Otherwise, please click No", function () {
			window.location.href = "/activexam/save_exam?exam_id=<%= params[:exam_id] %>&time="+tid;
		});
	});
});
</script>
		<!-- modal content -->
		<div id='confirm'>
			<div class='header'><span>Confirm</span></div>
			<div class='message'></div>
			<div class='buttons'>
				<div class='no simplemodal-close'>No</div><div class='yes'>Yes</div>
			</div>
		</div>
		<!-- preload the images -->
		<div style='display:none'>
			<img src='img/confirm/header.gif' alt='' />
			<img src='img/confirm/button.gif' alt='' />
		</div>
	</div>
