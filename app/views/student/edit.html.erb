<div class="form-container">
    <%= form_for(@user,:url=>{:action=>'update_profile',:id=>current_user.id},:html=>{:class=>'cmxform'}) do |f| %>
    <p class="legend">
        <strong>Note:</strong>
        Required fields are marked with an asterisk (<em>*</em>)
    </p>
    <fieldset>
        <%= f.error_messages %>
		       <div>
            <label for="email">
                Login Id/Email <em>*</em>
            </label>
            <%= f.text_field :email,:disabled => 'true' %>
        </div>
        <div>
            <label for="name">
                First Name<em>*</em>
            </label>
            <%= f.text_field :first_name %>
        </div>
		<div>
            <label for="name">
                Last Name<em>*</em>
            </label>
            <%= f.text_field :last_name %>
        </div>
 
 
        <div>
            <label for="phone_number">
                Mobile Number
            </label>
            <%= f.text_field :mobile_number %>
        </div>
		        <div>
            <label for="phone_number">
                Phone Number
            </label>
            <%= f.text_field :phone_number %>
        </div>
        <div class="buttonrow">
            <%= f.submit "Save" ,:class=>'button' %>
        </div>
    </fieldset>
    <% end %>
</div>
