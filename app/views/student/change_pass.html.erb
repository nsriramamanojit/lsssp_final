<div class="form-container">
    <%= form_for(@user,:url=>{:action=>'update_pass',:id=>current_user.id},:html=>{:class=>'cmxform'}) do |f| %>
    <p class="legend">
        <strong>Note:</strong>
        Required fields are marked with an asterisk (<em>*</em>)
    </p>
    <fieldset>
        <%= f.error_messages %>
		       <div>
            <label for="email">
                New Password <em>*</em>
            </label>
            <%= f.password_field :password %>
			
        </div>
        <div>
            <label for="name">
                New Password Confirmation<em>*</em>
            </label>
            <%= f.password_field :password_confirmation %>
			
        </div>
        <div class="buttonrow">
            <%= f.submit "Save" ,:class=>'button' %>
        </div>
    </fieldset>
    <% end %>
</div>
