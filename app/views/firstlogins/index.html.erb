<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
	<head>
		<title>LSSSP</title>
		<%= javascript_include_tag 'application','jquery-1.5.2.min','rails','jquery.simplemodal','facebox','jquery-ui-1.8.13.custom.min' %>
		<%= stylesheet_link_tag 'admin_screen','confirm' ,'facebox' %>
		<%= csrf_meta_tag %>
	</head>
	<body id="store">
		<div id="header">
			<div id="welcome">
				Welcome,
				<span id="welcome_username"><%= current_user.first_name %></span>
				<span>!&nbsp;&nbsp;</span>
				
				| <%= link_to 'Logout',logout_path %>
			</div>
			<%= link_to image_tag("adminlogo.png",:border => 0),root_url%>
		</div>
<table class="tabbed" height="100%" width="100%" cellspacing="0" cellpadding="0">
    <tr>
        <!-- END: SIDE BAR -->
        <td id='main' class='main' valign='top'>
            <div id='flash' style='display: none;'>
            </div>
            <%=render :partial=>'common/import_flash' %>
    <%= form_for(@user,:url=>{:action=>'changeprofile',:id=>current_user.id},:html=>{:class=>'cmxform'}) do |f| %>
       <div class="tabless">
            <div style="position: relative; left: 0px; top: 0px;" class="standalone" id="standalone">
                <div class="title">
                    Update Profile<br>
					   </div>
				<p class="legend">
        <strong>Note:</strong>
        Required fields are marked with an asterisk (<em>*</em>)
    </p>
                <div class="section">
                   <div class="label">
                        Enrollment Number:<em><font color="red">*</font></em>
                    </div>
                    <%= f.text_field :enrollment_number,:size=>30,:disabled => 'true' %>
                   <div class="label">
                        Email:<em><font color="red">*</font></em>
                    </div>
                    <%= f.text_field :email,:size=>30,:disabled => 'true' %>
                    <div class="label">
                        First Name:<em><font color="red">*</font></em>
                    </div>
                    <%= f.text_field :first_name,:size=>30 %>
                    <div class="label">
                        Last Name:<em><font color="red">*</font></em>
                    </div>
                    <%= f.text_field :last_name,:size=>30 %>
 
                    <div class="label">
                        Primary Contact Number:<em><font color="red">*</font></em> (Mobile/Telephone. Ex:+04412345678)
                    </div>
                    <%= f.text_field :mobile_number, :size=>30 %>
					 <div class="label">
                        Secondary Contact Number: (Mobile/Telephone. Ex:+04412345678)
                    </div>
                    <%= f.text_field :phone_number, :size=>30 %>
                </div>
				
				<div class="title">
				</div>
					<div class="label">
                        Password:<em><font color="red">*</font></em> (Min. Password Length is 4 characters)
                    </div>
                    <%= f.password_field :password, :size=>30 %>
                   <div class="label">
                        Confirm Password:<em><font color="red">*</font></em>
                    </div>
                    <%= f.password_field :password_confirmation, :size=>30 %>

				
                <div class="buttonbar">
                    <%= f.submit "Update Profile" %>
                </div>
                <% end %>
            </div>
        </div>
        </td>
    </tr>
</table>
<center>
<div id="footer">
   Â© 2011. This site is compatible with Google Chorme and Mozilla 3 and above.
</div>
</center>
</body>
</html>